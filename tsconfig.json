{
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "src/types/*",
      "src/**/tests/*",
      "src/headless/",
      "src/website.js"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",

    "types": [
      "@types/webappsec-credential-management"
    ],

    "lib": [
      "ES2020",
      "dom"
    ],

    "allowJs": true,
    "checkJs": true,

    // Generate d.ts files
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,

    "rootDir": "./src",
    "outDir": "./src/types/",
    "baseUrl": "./src/",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": false,
    "noImplicitAny": false,

    "skipLibCheck": true,

    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
