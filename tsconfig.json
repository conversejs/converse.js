{
  "include": [
      "src/**/*.js",
      "src/**/*.ts"
  ],
  "exclude": [
      "**/dist/**/*",
      "src/**/tests/**/*",
      "src/headless/",
      "src/log/",
      "src/types/**/*",
      "src/website.js",
  ],
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",

    "types": [
      "@types/webappsec-credential-management"
    ],

    "lib": [
      "es2023",
      "dom",
      "dom.iterable"
    ],

    "allowJs": true,
    "checkJs": true,

    // Generate d.ts files
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,

    "rootDir": "./src",
    "outDir": "./src/types/",
    "baseUrl": "./src/",
    "paths": {
      "@converse/log": ["log/types/index.d.ts"],
      "@converse/headless": ["headless/types/index.d.ts"]
    },

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": false,
    "noImplicitAny": false,

    "skipLibCheck": true,

    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
